<div class="post-container">
  <div class="side-bar">
    <div id="prev-post" class="post-button"><a href="<%= @prev_link %>"><%= @prev_title %></a></div>
  </div>
  <div class="post">
    <h1><%= @title %></h1>
    <p><%= raw @content %></p>
  </div>
  <div class="side-bar">
    <div id="next-post" class="post-button"><a href="<%= @next_link %>"><%= @next_title %></a></div>
  </div>
</div>
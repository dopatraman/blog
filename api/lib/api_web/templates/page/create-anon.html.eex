<div class="container">
  <%= form_for @conn, Routes.posts_path(@conn, :create_anonymous_post) , fn f -> %>
    <div class="editor-container">
      <div class="editor">
        <%= text_input f, :title, [id: "title", class: "title", placeholder: "Title"] %>
        <%= textarea f, :content, [id: "content", class: "content", placeholder: "Start your post..."]  %>
      </div>
      <div class="editor-panel">
        <div class="button-container-vertical">
          <%= submit "Create", [id: "create-anon-post", class: "button create"] %>
        </div>
      </div>
    </div>
  <% end %>
</div>
